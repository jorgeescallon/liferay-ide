<project xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd"
    xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>com.liferay.ide</groupId>
        <artifactId>parent</artifactId>
        <version>3.0.0-SNAPSHOT</version>
        <relativePath>../parent/pom.xml</relativePath>
    </parent>

    <groupId>com.liferay.ide.releng</groupId>
    <artifactId>releng</artifactId>

    <name>Liferay IDE Releng</name>

    <packaging>pom</packaging>

    <repositories>
        <repository>
            <id>ivy</id>
            <layout>p2</layout>
            <url>${ivy-site}</url>
        </repository>
        <repository>
            <id>ivyde</id>
            <layout>p2</layout>
            <url>${ivyde-site}</url>
        </repository>
    </repositories>

    <modules>
        <!-- all repositories included in composite need to be built before the com.liferay.ide-repository -->
        <module>com.liferay.ide.maven-repository</module>
        <module>com.liferay.ide.tools-repository</module>
        <module>com.liferay.mobile.sdk-repository</module>
        <!--<module>com.liferay.ide.velocity-repository</module>-->
        <module>com.liferay.ide-repository</module>
    </modules>

</project>
